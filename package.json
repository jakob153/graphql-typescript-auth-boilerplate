{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "cd ./packages/react-app && react-scripts start",
    "build": "cd ./packages/react-app && react-scripts build",
    "test": "cd ./packages/react-app && react-scripts test",
    "lint": "eslint --fix packages/**/*.{ts,tsx}",
    "dev:server": "cd ./packages/server &&  nodemon --exec ts-node --files src/app.ts && NODE_ENV=development",
    "build:server": "cd ./packages/server && tsc src/app.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  }
}
