{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "cd ./packages/react-app && react-scripts start",
    "build": "cd ./packages/react-app && react-scripts build",
    "test": "cd ./packages/react-app && react-scripts test",
    "lint": "eslint --fix packages/**/*.{ts,tsx}",
    "dev:server": "cd ./packages/server && cross-env NODE_ENV=development nodemon --exec ts-node --files src/app.ts",
    "build:server": "cd ./packages/server && tsc"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "prettier": "^1.19.1",
    "typescript": "^3.8.2"
  }
}
