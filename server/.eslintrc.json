{
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions":  {
    "ecmaVersion":  2018,
    "sourceType":  "module"
  },
  "rules": {
    "no-console": "error",
    "no-undef": "off",
    "prettier/prettier": ["error", { "singleQuote": true }]
  }
}
